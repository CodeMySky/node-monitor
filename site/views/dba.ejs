<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>
            Database
        </title>
        <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
        <link rel="stylesheet" href="/css/bootstrap-editable.css" type="text/css">
        <link rel="stylesheet" href="/css/dba.css" type="text/css">
    </head>
    <body>
        <% include header.ejs %>
        <div class="container">
            <blockquote id='table-comment'></blockquote>
            <div class="input-prepend input-append hide" id="select">
                <span class="add-on" id='selectHint'>Please select </span> <select id="choice">
                    </select> <button class="btn" type="button" id="get">GO!</button>
            </div>
            <table class="table table-bordered" id="table">
            </table>
            <button class="btn" type="button" id="add">Add</button>
        </div>
         
        <!-- Modal -->
        <div id="detailModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="detailModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="detailModalLabel">Record</h3>
          </div>
          <div class="modal-body">
            <form class="form-horizontal" id="form">
            </form>
          </div>
          <div class="modal-footer">
            <button class="btn btn btn-danger pull-left" id="deleteBtn">Delete</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn btn-primary" id="saveBtn">Save &amp; Submit</button>
          </div>
        </div>
        <div id="confirmModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
            <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="confirmModalLabel">Confirm</h3>
          </div>
          <div class="modal-body">
            Are you sure to delete?
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn btn-primary" id="confirmBtn">I'm sure</button>
          </div>
        </div>
        <div class="alert alert-error hide">
            Something goes wrong!
        </div>

        <script src="/js/jquery-2.0.3.min.js" type="text/javascript"></script>
        <script src="/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/js/bootstrap-editable.min.js" type="text/javascript"></script>
        <script src="/js/dba.js" type="text/javascript"></script>
        <% include footer.ejs %>
    </body>
</html>